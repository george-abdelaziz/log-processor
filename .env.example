# Application Configuration
NODE_ENV=development
PORT=3000
LOG_LEVEL=info # (e.g., error, warn, info, http, verbose, debug, silly)

# Kafka Configuration
# Comma-separated list of Kafka broker addresses
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID=user-activity-processor
KAFKA_GROUP_ID=user-activity-group
KAFKA_TOPIC=user-activity-logs
# Optional Kafka SASL/SSL settings if needed
# KAFKA_SASL_MECHANISM=
# KAFKA_SASL_USERNAME=
# KAFKA_SASL_PASSWORD=
# KAFKA_SSL_ENABLED=false
# KAFKA_SSL_CA_PATH=
# KAFKA_SSL_CERT_PATH=
# KAFKA_SSL_KEY_PATH=

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/user-activity
# Optional MongoDB Atlas SRV record URI
# MONGODB_URI=mongodb+srv://<username>:<password>@<cluster-url>/user-activity?retryWrites=true&w=majority 